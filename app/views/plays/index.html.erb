<div class="row">
  <div class="large-12 columns">
    <h1>Список спектаклей</h1>
    <table>
      <thead>
      <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Автор</th>
        <th>Год основания</th>
        <th colspan="3">Операции</th>
      </tr>
      </thead>

      <tbody>
      <% @plays.each do |play| %>
          <tr>
            <td><%= play.title %></td>
            <td><%= play.description %></td>
            <td><%= play.author %></td>
            <td><%= play.year_of_foundation %></td>
            <td><%= link_to 'Детали', play %></td>
            <td><%= link_to 'Редактировать', edit_play_path(play) %></td>
            <td><%= link_to 'Удалить', play, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      <tr>
        <td colspan="7">
        <strong>Всего: <%=@plays.size%></strong>
        </td>
      </tr>
      </tbody>
    </table>

   <p></p>

    <%= link_to 'Добавить спектакль', new_play_path %>

  </div>
</div>
