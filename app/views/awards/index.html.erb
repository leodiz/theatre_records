<div class="row">
  <div class="large-12 columns">
    <h1>Список наград </h1>

    <table>
      <thead>
      <tr>
        <th>Название</th>
        <th>Дата</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @awards.each do |award| %>
          <tr>
            <td><%= award.title %></td>
            <td><%= award.date %></td>
            <td><%= link_to 'Показать', award %></td>
            <td><%= link_to 'Редактировать', edit_award_path(award) %></td>
            <td><%= link_to 'Удалить', award, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Добавить награду', new_award_path %>
  </div>
</div>